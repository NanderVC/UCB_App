<MyFloat>:
    
    img:''
    button1: button1
    button2: button2
         
    Image:
        source: root.img
        size_hint: 1,0.8
        pos_hint: {"top":1, "x":0}
    
    Button:
        id: button1
        text: "I like this"
        pos_hint: {"bottom":1, "x":0}
        size_hint: 0.3, 0.2
        on_press: root.btn_like(), root.algorithm()
     
    Button:
        id: button2
        text: "I don't like this"
        size_hint: 0.3, 0.2
        pos_hint: {"bottom":1, "x":0.7}
        on_press: root.btn_not_like(), root.algorithm() 
        
    Button:
        id: exit_button
        text: "Exit"
        size_hint: 0.2, 0.2
        pos_hint: {"bottom": 1, "x":0.4}
        on_press: root.exit_button()